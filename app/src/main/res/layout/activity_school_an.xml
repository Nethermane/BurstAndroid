<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:contextDescription="Burst Android.">

    <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="367dp"
            android:layout_height="56dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="385dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="199dp"
            app:layout_constraintBottom_toBottomOf="parent" app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp" android:id="@+id/searchBar_card" app:cardElevation="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/school_search" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/search_image"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:elevation="16dp" android:hint="@string/defult_school_search" android:layout_marginStart="16dp"/>
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@drawable/icon_visibility_filled"
                    android:id="@+id/search_image" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/app_name"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="271dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="209dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="367dp"
            style="@style/Widget.MaterialComponents.CardView" android:id="@+id/school_card"
            app:cardBackgroundColor="@color/design_default_color_primary"
            app:cardCornerRadius="5dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/mask_group_10"
                android:id="@+id/card_pic" android:contentDescription="@string/app_name"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
            android:layout_width="222dp"
            android:layout_height="33dp"
            android:id="@+id/display" android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="69dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="69dp"
            android:layout_marginBottom="503dp" app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Events Around You" android:textSize="24sp" android:textAlignment="center"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="@string/text_str"
            android:layout_width="328dp"
            android:layout_height="54dp"
            android:id="@+id/min_text" android:layout_marginTop="141dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginBottom="445dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp" android:textAlignment="center" android:textColor="@android:color/black"
            app:lineHeight="21sp"/>
    <ImageView
            android:layout_width="291dp"
            android:layout_height="304.4dp" app:srcCompat="@drawable/group_97" android:id="@+id/backgroundLogo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/app_name"/>
    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_back"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="69dp"
            android:layout_height="48dp"
            android:text="@string/button_label_enabled"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/transparent" app:backgroundTint="@android:color/transparent"
            android:textColor="@android:color/tertiary_text_light"/>
    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_profile"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="104dp"
            android:layout_height="48dp"
            android:text="@string/profile_str"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/transparent" app:backgroundTint="@android:color/transparent"
            android:textColor="@android:color/tertiary_text_light" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_program"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="371dp"
            android:layout_height="48dp"
            android:text="@string/program_label"
            android:layout_marginBottom="139dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/transparent" app:backgroundTint="@android:color/transparent"
            android:textColor="@android:color/black" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="453dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.505" android:textAlignment="viewStart" android:textAllCaps="false"
            android:textSize="18sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>